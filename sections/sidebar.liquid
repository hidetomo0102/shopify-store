<div class="">
  {% for block in section.blocks %}
    {% assign item = block.settings %}
    <a href="{{ item.url }}">
      <div class="relative">
        <img src="{{ item.image | img_url: 'master' }}" alt="{{ item.title }}">
        <p class="font-serif text-white w-full text-3xl absolute z-10 top-1/3 text-center">{{ item.title }}</p>
    </div>
    </a>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Sidebar",
  "blocks": [
    {
      "name": "Sidebar Image",
      "type": "image",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sidebar Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Label"
        }
      ]
    }
  ]
}
{% endschema %}