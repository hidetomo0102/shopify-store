<section class="container p-6 mx-auto">
  <h1
    class="
      font-serif
      text-4xl
      font-semibold
      text-center text-gray-700
      py-12
      md:text-5xl
    "
  >
    {{ section.settings.title }}
  </h1>
  <div
    class="grid grid-cols-1 gap-x-2 xl:grid-cols-3 md:grid-cols-2 md:gap-x-6"
  >
    {% for product in collections[section.settings.featured_collection].products
    %}
    <div class="mx-auto shadow-md rounded-sm max-w-sm mb-6 hover:shadow-sm">
      <a href="{{ product.url }}">
        <img
          class="rounded-t-md lg:max-w-sm md:max-w-xs"
          src="{{ product.featured_media.preview_image | img_url: 'master' }}"
          alt="{{ product.title }}"
        />
        <p class="font-serif text-sm text-yellow-900 py-2 px-1 md:text-base">
          {{ product.title }}
        </p>
        <p class="text-gray-700 font-sans text-xs pb-2 px-1 md:text-sm">
          {{ product.price | money }}
        </p>
      </a>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %} { "name": "Featured Collection", "class":
"featured-collection-section", "settings": [ { "type": "collection", "id":
"featured_collection", "label": "Collection" }, { "type": "text", "id": "title",
"default": "Featured Collection", "label": "Title" } ], "presets": [ {
"category": "Collection", "name": "Featured Collection" } ] } {% endschema %}
