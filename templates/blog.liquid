{% paginate blog.articles by 6 %}
<section
  class="container p-6 mx-auto animsition"
  data-animsition-in-class="fade-in-right-sm"
  data-animsition-in-duration="1000"
>
  <h1
    class="
      font-serif
      text-4xl
      font-semibold
      text-center text-gray-700
      py-12
      md:text-5xl
    "
  >
    {{ blog.title }}
  </h1>
  <div
    class="
      grid grid-cols-1
      gap-y-8 gap-x-2
      xl:grid-cols-3
      md:grid-cols-2 md:gap-x-6
    "
  >
    {% for article in blog.articles %}
    <a href="{{ article.url }}">
      <div class="rounded overflow-hidden shadow-md">
        <img
          src="{{ article.image.src | img_url: 'master' }}"
          alt="{{ article.title }}"
        />
        <div class="px-6 py-4">
          <div class="font-bold text-xl my-2">{{ article.title }}</div>
          <div class="text-gray-500 text-base">
            {{ article.excerpt_or_content | truncate: 100, '...' }}
          </div>
        </div>
        <div class="px-6 pt-4 pb-2">
          {% for tag in article.tags limit: 5 %}
          <span
            class="
              inline-block
              bg-gray-200
              rounded-full
              px-3
              py-1
              text-sm
              font-semibold
              text-gray-700
              mr-2
              mb-2
            "
            >{{ tag }}</span
          >
          {% endfor %}
        </div>
      </div>
    </a>
    {% endfor %}
  </div>
  {% render 'pagination', paginate: paginate %} {% endpaginate %}
</section>
